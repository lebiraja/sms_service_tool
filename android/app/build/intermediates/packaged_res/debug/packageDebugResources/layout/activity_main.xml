<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.smstool.gateway.MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/primary"
        app:title="@string/app_name" />

    <!-- Connection Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@drawable/bg_status_card"
        android:elevation="2dp">

        <!-- Status Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/statusChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/status_not_connected"
            android:textColor="@android:color/white"
            app:chipBackgroundColor="@drawable/status_chip_colors"
            app:chipIcon="@drawable/ic_dot"
            app:iconStartPadding="0dp"
            app:iconEndPadding="8dp" />

        <!-- Device Info -->
        <TextView
            android:id="@+id/deviceInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Server Configuration Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_server_url"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/urlInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:counterEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/urlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_server_url"
            android:inputType="text"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Device ID Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_device_id"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/deviceIdText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="11sp"
            android:textIsSelectable="true"
            android:maxLines="1"
            android:ellipsize="middle"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/copyDeviceIdButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_copy"
            android:contentDescription="@string/action_copy_device_id"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Connect/Disconnect Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/action_connect"
        android:textSize="16sp"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@+id/activityLogSection" />

    <!-- Error Message -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/error"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Activity Log Section -->
    <TextView
        android:id="@+id/activityLogSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_activity_log"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp" />

    <!-- Activity Log RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventLogRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_log_card"
        android:padding="8dp"
        tools:listitem="@layout/item_event_log" />

</LinearLayout>
